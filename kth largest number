import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        int n,k;
        Scanner s=new Scanner(System.in);
        n=s.nextInt();
        int a[]=new int[n];
        k=s.nextInt();
        for(int i=0;i<n;i++)
        {
            a[i]=s.nextInt();
        }
        Arrays.sort(a);
        for(int i=n;i>0;i--)
        {
            if(k==i-1)
            {
                System.out.println(a[i]);
            }
        }
    }
}
